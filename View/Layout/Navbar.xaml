<UserControl
    x:Class="LifetimeToolManage.View.Layout.Navbar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="240"
    d:DesignHeight="800"
    d:DesignWidth="240"
    Background="Transparent"
    mc:Ignorable="d">

    <!--  Styl przycisku  -->
    <UserControl.Resources>
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#1a1a1a" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Padding" Value="20,28" />
            <Setter Property="Margin" Value="0,24" />
            <Setter Property="BorderBrush" Value="#000000" />

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="BorderElement"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="6">
                            <ContentPresenter
                                Margin="{TemplateBinding Padding}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="BorderElement" Property="Background" Value="#616161" />
                                <Setter TargetName="BorderElement" Property="BorderBrush" Value="#404040" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <!--  Pasek boczny z obramowaniem i cieniem  -->
    <Border
        Background="#f0f0f0"
        BorderBrush="#CCCCCC"
        BorderThickness="0,0,1,0">
        <Grid>
            <Grid.Effect>
                <DropShadowEffect
                    BlurRadius="8"
                    Direction="270"
                    Opacity="0.3"
                    ShadowDepth="4"
                    Color="Black" />
            </Grid.Effect>

            <Grid.RowDefinitions>
                <!--  Main buttons  -->
                <RowDefinition Height="*" />
                <!--  Bottom - service btn  -->
                <RowDefinition Height="Auto" />
                <!--  Version  -->
                <RowDefinition Height="40" />
            </Grid.RowDefinitions>

            <!--  Górne przyciski  -->
            <StackPanel
                Grid.Row="0"
                Margin="16,40"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                Orientation="Vertical">
                <Button
                    Command="{Binding NavigateCommand}"
                    CommandParameter="Home"
                    Content="Home"
                    Style="{StaticResource SidebarButtonStyle}" />

                <Button
                    Command="{Binding NavigateCommand}"
                    CommandParameter="Lista"
                    Content="Lista"
                    Style="{StaticResource SidebarButtonStyle}" />

                <Button
                    Command="{Binding NavigateCommand}"
                    CommandParameter="Skaner"
                    Content="Skaner"
                    Style="{StaticResource SidebarButtonStyle}" />
            </StackPanel>

            <!--  Przycisk Serwis na dole  -->
            <Button
                Grid.Row="1"
                Margin="16,40"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Bottom"
                Command="{Binding NavigateCommand}"
                CommandParameter="Serwis"
                Content="Serwis"
                Style="{StaticResource SidebarButtonStyle}" />
            <!--  Pasek wersji  -->
            <Border
                Grid.Row="2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Bottom"
                Background="#E0E0E0"
                BorderBrush="#CCCCCC"
                BorderThickness="0,1,0,0">
                <TextBlock
                    Margin="0,8"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="14"
                    FontWeight="Normal"
                    Foreground="#555"
                    Text="Wersja 1.0.0" />
            </Border>
        </Grid>

    </Border>
</UserControl>
