<UserControl
    x:Class="LifetimeToolManage.View.HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="800"
    d:DesignWidth="1000"
    Background="White"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="ControlButton" TargetType="Button">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontWeight" Value="SemiBold" />

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="BorderElement"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="BorderElement" Property="Background" Value="#616161" />
                                <Setter TargetName="BorderElement" Property="BorderBrush" Value="#404040" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!--  Nagłówki  -->
            <RowDefinition Height="320" />
            <!--  Sekcja główna  -->
            <RowDefinition Height="*" />
            <!--  Logi  -->
        </Grid.RowDefinitions>

        <!--  🔹 Nagłówki  -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <GroupBox
                FontSize="16"
                Foreground="#222"
                Header="Tools">
                <StackPanel Margin="16,8">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            FontSize="40"
                            FontWeight="Bold"
                            Foreground="#333"
                            Text="Narzędzie: " />
                        <TextBlock
                            Margin="5"
                            FontSize="36"
                            Text="{Binding ActiveToolName}" />
                    </StackPanel>

                    <StackPanel Margin="0,16,0,0" Orientation="Horizontal">
                        <TextBlock
                            FontSize="32"
                            FontWeight="SemiBold"
                            Foreground="#555"
                            Text="Przebieg: " />
                        <TextBlock
                            Margin="5"
                            FontSize="28"
                            Text="{Binding ActiveLifetime}" />
                    </StackPanel>
                </StackPanel>
            </GroupBox>
        </StackPanel>

        <!--  🔹 Sekcja główna  -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="400" />
            </Grid.ColumnDefinitions>

            <!--  🧩 Urządzenia  -->
            <GroupBox
                Grid.Column="0"
                Margin="0,0,16,0"
                FontSize="16"
                Foreground="#222"
                Header="Devices connection">
                <StackPanel Margin="16,16,16,16">
                    <StackPanel Margin="0,0,0,20" Orientation="Horizontal">
                        <TextBlock
                            FontSize="32"
                            FontWeight="Medium"
                            Foreground="#444"
                            Text="Device 1:" />
                        <Ellipse
                            Width="32"
                            Height="32"
                            Margin="16,0,0,0"
                            Fill="Green">
                            <Ellipse.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation
                                                AutoReverse="True"
                                                Storyboard.TargetProperty="Opacity"
                                                From="1"
                                                To="0.3"
                                                Duration="0:0:0.8" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Ellipse.Triggers>
                        </Ellipse>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            FontSize="32"
                            FontWeight="Medium"
                            Foreground="#444"
                            Text="Device 2:" />
                        <Ellipse
                            Width="32"
                            Height="32"
                            Margin="16,0,0,0"
                            Fill="Orange">
                            <Ellipse.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation
                                                AutoReverse="True"
                                                Storyboard.TargetProperty="Opacity"
                                                From="1"
                                                To="0.3"
                                                Duration="0:0:0.8" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Ellipse.Triggers>
                        </Ellipse>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <!--  🧩 Przyciski  -->
            <GroupBox
                Grid.Column="1"
                FontSize="16"
                Foreground="#222"
                Header="Buttons">
                <StackPanel Margin="16">
                    <Button
                        Height="96"
                        Margin="0,20"
                        Padding="20"
                        HorizontalAlignment="Stretch"
                        Background="#0006b5"
                        BorderBrush="#00035e"
                        BorderThickness="2"
                        Content="Zapisz przebieg"
                        FontSize="20"
                        FontWeight="Bold"
                        Foreground="White"
                        Style="{StaticResource ControlButton}" />

                    <Button
                        Height="96"
                        Margin="0,20"
                        Padding="20"
                        HorizontalAlignment="Stretch"
                        Background="#1a1a1a"
                        BorderBrush="#000000"
                        BorderThickness="2"
                        Content="Skanuj"
                        FontSize="20"
                        FontWeight="Bold"
                        Foreground="White"
                        Style="{StaticResource ControlButton}" />
                </StackPanel>
            </GroupBox>
        </Grid>

        <!--  🔹 Pasek logów z przewijaniem  -->
        <Border
            Grid.Row="2"
            Padding="10"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="#F5F5F5"
            BorderBrush="#CCCCCC"
            BorderThickness="1"
            CornerRadius="4">
            <GroupBox
                FontSize="16"
                Foreground="#222"
                Header="Logs">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="8">
                        <TextBlock
                            FontSize="14"
                            Foreground="#333"
                            Text="✓ System uruchomiony" />
                        <TextBlock
                            FontSize="14"
                            Foreground="#333"
                            Text="✓ Oczekiwanie na dane z urządzenia..." />
                        <!--  Dodaj więcej logów tutaj  -->
                    </StackPanel>
                </ScrollViewer>
            </GroupBox>
        </Border>
    </Grid>
</UserControl>
